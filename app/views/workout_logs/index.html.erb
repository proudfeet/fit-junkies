<p id="notice"><%= notice %></p>

<h1>Listing Workout Logs</h1>

<% if @workout_logs.length > 0 %>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @workout_logs.each do |workout_log| %>
        <tr>
          <td><%= workout_log.updated_at.strftime("%b %d, %Y") %></td>
          <td><%= workout_log.workout.workout_name %></td>
        </tr>
        <tr>
          <td><%= link_to 'Show', workout_log %></td>
          <td><%= link_to 'Edit', edit_workout_log_path(workout_log) %></td>
          <td><%= link_to 'Remove', workout_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="no-show">Sorry, nothing to show here yet.</div>
<% end %>
<br>

<%= link_to 'New Workout log', new_workout_log_path, :class => 'btn btn-default' %>
