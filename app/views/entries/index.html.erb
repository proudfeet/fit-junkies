<p id="notice"><%= notice %></p>

<h1>Listing Entries</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Weight(cm)</th>
      <th>Thigh(cm)</th>
      <th>Waist(cm)</th>
      <th>Chest(cm)</th>
      <th>Upperarm(cm)</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td>
          <% if entry.created_at != entry.updated_at %>
            <%= entry.updated_at %>
            <!-- TODO: format timestamps for created_at and updated_at -->
          <% else %>
            <%= entry.created_at %>
          <% end %>
        </td>
        <td><%= entry.weight %></td>
        <td><%= entry.thigh %></td>
        <td><%= entry.waist %></td>
        <td><%= entry.chest %></td>
        <td><%= entry.upperarm %></td>
        <td><%= entry.notes %></td>
        <td class="hidden-xs" ><%= link_to 'Show', entry %></td>
        <td class="hidden-xs" ><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td class="hidden-xs" ><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

