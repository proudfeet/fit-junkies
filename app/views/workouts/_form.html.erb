
<%= form_for(@workout, :class => 'form') do |f| %>
  <% if @workout.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@workout.errors.count, "error") %> prohibited this workout from being saved:</h2>

      <ul>
      <% @workout.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :workout_name, "Name your Workout" %><br>
    <%= f.text_field :workout_name %>
  </div>

  <div class="field">
    <%= link_to 'Add an activity to your workout', new_activity_path %>
    <!-- render activties/form -->
  </div>

    <!-- TODO add in activity form fields to workout form
    use debugging to fix up-->

 <div class="field">
 <% activityList = [] %>
 <% @activities.each do |activity| %>
  <% activityList.push([activity.name, activity.activity_type) %>
 <% end %>

  <div class="form-select">
      <%= select_tag(
          "activity_type",
          options_for_select([
            ['activity.name', 'aerobic'],
            ['Interval', 'interval'],
            ['Anaerobic', 'anaerobic'],
            ['Momentum', 'momentum'],
            ['Durability', 'durability'],
            ['Weights', 'weights'],
            ['Distance', 'distance'],
            ['Kettle Bells', 'kettle-bells']
          ])
        ) %>
    </div>
 </div>

  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes, :rows => '10' %>
  </div>
  <div class="actions">
  <%= f.submit :class => 'btn btn-default' %>
  </div>
<% end %>
