
<%= form_for(@workout, :class => 'form') do |f| %>
  <% if @workout.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@workout.errors.count, "error") %> prohibited this workout from being saved:</h2>

      <ul>
      <% @workout.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :workout_name, "Name your Workout" %><br>
    <%= f.text_field :workout_name %>
  </div>

  <div class="field">
    <%= link_to 'Add an activity to your workout', new_activity_path %>
    <!-- render activties/form -->
  </div>

    <!-- TODO add in activity form fields to workout form
    use debugging to fix up-->

 <div class="field">


   <div class="form-select">
     <select name="activity" id="activity-select">
       <% @activities.each do |activity| %>
        <option value="<%= activity.id %>" data-activity-type="<%= activity.activity_type %>"><%= activity.name %></option>
       <% end %>
     </select>
   </div>
   <div class="input-container">
     <label for="workout_sets">Sets</label>
     <input type="text" id="workout_sets" name="workout[workout_sets]">
   </div>
   <div class="input-container">
     <label for="workout_reps">Reps</label>
     <input type="text" id="workout_reps" name="workout[workout_reps">
   </div>
   <div class="input-container">
     <label for="workout_time">Time</label>
     <input type="text" id="workout_time" name="workout[workout_time]">
   </div>
   <div class="input-container">
     <label for="workout_distance">Distance</label>
     <input type="text" id="workout_distance" name="workout[workout_distance]">
   </div>
      
 </div>

  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes, :rows => '10' %>
  </div>
  <div class="actions">
  <%= f.submit :class => 'btn btn-default' %>
  </div>
<% end %>

<script>
  function disableInputs(){
    var selectEl = document.getElementById("activity-select");
    var selectOpt = selectEl.options[selectEl.selectedIndex].dataset.activityType;
    if(selectOpt === "anabolic") {
      document.getElementById("workout_time").setAttribute("disabled", true);
      document.getElementById("workout_distance").setAttribute("disabled", true);
    } else {
      document.getElementById("workout_sets").setAttribute("disabled", true);
      document.getElementById("workout_reps").setAttribute("disabled", true);
    }
  };

  disableInputs();
  $("#activity-select").change(function(){
    disableInputs();
  });

</script>
