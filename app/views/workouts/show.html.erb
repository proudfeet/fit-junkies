<p id="notice"><%= notice %></p>

<h1>
  Workout name:
  <%= @workout.workout_name %>
</h1>

<div class="activity-list">
	<% @workout.getWorkoutActivities.each do |workout_activity| %>
	<div>
		<div class="dib">
			<h3>Activity</h3>
			<%= workout_activity.getActivityName %>
			<!-- TODO: fix this, find how out how pass in global variables within for loop to get activity name to appear -->
			<!-- So close, and yet, so far -->
			<!-- Currently showing activity_id -->
		</div>
		<div class="dib">
			<h3>Sets</h3>
			<% if workout_activity.sets %>
				<span class="data"><%= workout_activity.sets %></span>
			<% else %>
				<span class="no-data">N/A</span>
			<% end %>
		</div>
		<div class="dib">
			<h3>Reps</h3>
			<% if workout_activity.reps %>
				<span class="data"><%= workout_activity.reps %></span>
			<% else %>
				<span class="no-data">N/A</span>
			<% end %>
		</div>
		<div class="dib">
			<h3>Weight (lbs)</h3>
			<% if workout_activity.weight %>
				<span class="data"><%= workout_activity.weight %></span>
			<% else %>
				<span class="no-data">N/A</span>
			<% end %>
		</div>
		<div class="dib">
			<h3>Distance (km)</h3>
			<% if workout_activity.distance %>
				<span class="data"><%= workout_activity.distance %></span>
			<% else %>
				<span class="no-data">N/A</span>
			<% end %>
		</div>
		<div class="dib">
			<h3>Time (minutes)</h3>
			<% if workout_activity.time %>
				<span class="data"><%= workout_activity.time %></span>
			<% else %>
				<span class="no-data">N/A</span>
			<% end %>
		</div>
	</div>
	<% end %>
</div>

<p>
  <strong>Notes:</strong>
  <%= @workout.notes %>
</p>

<%= link_to 'Edit', edit_workout_path(@workout) %> |
<%= link_to 'Back', workouts_path %>
<%= link_to 'Add an activity to this workout', new_workout_activity_path(workout_id: @workout.id) %>
